extends layout-no-footer.pug
block head
    link(rel='stylesheet' href='/stylesheets/register.css')
    link(rel='stylesheet' href='/stylesheets/scrollbar.css')
block content
    .register-form
        .left-side
            if errors
                div(class='errors')
                    h3 The following errors have happened
                    ul
                        each error in errors
                            li
                                p= error
            a(href='/' class='logo-link')
                img(src="newLogo.png", alt="Logo", class="thelogo", )
            h2 Sign Up
            form(action='/register' method='POST')
                input(type='hidden' name='_csrf' value=csrfToken)
                input(type='text' placeholder='user' name='username' value=username autocomplete="off")
                input(type='email' placeholder='user@user.com' name='email' value=email autocomplete="off")
                input(type='password' placeholder='password' name='password')
                input(type='password' placeholder='confirm password' name='passwordConfirmation')
                button(type='submit' class='submitbtn') Register
                a(href='/login', class='question') Already have an account?
        .right-side
