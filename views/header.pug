head
    link(rel='stylesheet' href='/stylesheets/header.css')
    link(rel='stylesheet' href='/stylesheets/reset.css')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
body
    header(class="header")
        .header__logo
            a(class="logo", href="/") awesome/Anime
        .header__nav
            ul(class='nav-links')
                li()
                    a(href="/anime") Anime
                li()
                    a(href="/list") List
                li()
                    a(href='/search') Live Search
            form(class="search-form" action='/search' method='POST')
                input(type="text" name='search' class="inputfield" spellcheck="false" autocomplete="off")
                .search-btn
                    button(class="search_btn")
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
        if authenticated
            .header__user
                .profile-pic(style=`background-image: url(${user.profile_pic_url})`)
                .user-dropdown
                    .user-drop
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevrons-down"><polyline points="7 6 12 11 17 6"></polyline></svg>
                        ul(class='dropmenu')
                            li
                                p(class='dropdown-user') Welcome, #{user.username}
                            li
                                a(href='/') <i class="fas fa-home"></i> Home
                            li
                                a(href='/anime') <i class="fas fa-film"></i> Anime
                            li
                                a(href='/list') <i class="fas fa-list"></i> List
                            li
                                a(href='/settings') <i class="fas fa-cog"></i> Settings
                            li
                                a(href='/profile') <i class="fas fa-user-circle"></i> Profile
                            if user.dark_mode
                                li
                                    form(action='/users/light' method='post' class='logout-btn') <button type='submit'> <i class="fas fa-sun"></i> Lightmode </button>
                            else
                                li
                                    form(action='/users/dark' method='post' class='logout-btn') <button type='submit'> <i class="fas fa-moon"></i> Darkmode </button>
                            li
                                form(action='/logout' method='post' class='logout-btn') <button type='submit'> <i class="fas fa-sign-out-alt"></i> Logout </button>
        else
            a(class="btn first-btn logintext" href='/login') Login
        .hamburger
            button(class='hamburger-btn')
                <i class="fas fa-bars"></i>
